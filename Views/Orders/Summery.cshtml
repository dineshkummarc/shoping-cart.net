@model MVc_Assignment2.Order

@{
    ViewBag.Title = "Details";
}

<h1>Summery</h1>

<fieldset>
    <legend>Order</legend>
    <h2>Your order is successfuly submited</h2>
    <h3>Order id: @Html.DisplayFor(model => model.OrderId)</h3>
    <h3>
        Status:
        @{
            var status = Html.DisplayFor(model => model.Status).ToString();
            int _status = Int32.Parse(status);
            switch (_status)
            {
                case 0:
                    <span>Not complete</span>
                    break;
                case 1:
                <span>Pending</span>
                    break;
                case 2:
                <span>Processing</span>
                    break;
                case 3:
                <span>Shiped</span>
                    break;

            }
        }

    </h3>


    <div class="container summery">
        <h3>The products will be ship to:</h3>
        <div class="row">
            <div class="editor-label col-md-offset-1 col-md-2  col-sm-2 col-xs-12">
                @Html.DisplayNameFor(model => model.FName)
            </div>
            <div class="editor-field  col-md-5 col-sm-5 col-xs-12">
                @Html.DisplayFor(model => model.FName)
            </div>
        </div>
        <div class="row">
            <div class="editor-label col-md-offset-1 col-md-2  col-sm-2 col-xs-12">
                @Html.DisplayNameFor(model => model.LName)
            </div>
            <div class="editor-field  col-md-5 col-sm-5 col-xs-12">
                @Html.DisplayFor(model => model.LName)
            </div>
        </div>
        <div class="row">
            <div class="editor-label col-md-offset-1 col-md-2  col-sm-2 col-xs-12">
                @Html.DisplayNameFor(model => model.Address)
            </div>
            <div class="editor-field  col-md-5 col-sm-5 col-xs-12">
                @Html.DisplayFor(model => model.Address),<br />
                @Html.DisplayFor(model => model.City),
                @Html.DisplayFor(model => model.State)
                @Html.DisplayFor(model => model.Zipcode)<br />
                Australia

            </div>
        </div>

        <h3>The billing details are:</h3>
        <div class="row">
            <div class="editor-label col-md-offset-1 col-md-2  col-sm-2 col-xs-12">
                @Html.DisplayNameFor(model => model.CCName)
            </div>
            <div class="editor-field  col-md-5 col-sm-5 col-xs-12">
                @Html.DisplayFor(model => model.CCName)
            </div>
        </div>
        <div class="row">
            <div class="editor-label col-md-offset-1 col-md-2  col-sm-2 col-xs-12">
                @Html.DisplayNameFor(model => model.CCNumber)
            </div>
            <div class="editor-field  col-md-5 col-sm-5 col-xs-12">

                @for (int i = 0; i < Html.DisplayFor(model => model.CCNumber).ToString().Length; i++)
                {
                    <span>*</span>
                }

                @Html.DisplayFor(model => model.CCNumber).ToString().Substring((Html.DisplayFor(model => model.CCNumber).ToString().Length - 4), 4)
            </div>
        </div>

        <div class="row">
            <div class="editor-label col-md-offset-1 col-md-2  col-sm-2 col-xs-12">
                @Html.DisplayNameFor(model => model.CCDate)
            </div>
            <div class="editor-field  col-md-5 col-sm-5 col-xs-12">
                @Html.DisplayFor(model => model.CCDate)
            </div>

        </div>
        <div class="row">
            <div class="editor-label col-md-offset-1 col-md-2  col-sm-2 col-xs-12">
                @Html.DisplayNameFor(model => model.Payment)
            </div>
            <div class="editor-field  col-md-5 col-sm-5 col-xs-12">
                @Html.DisplayFor(model => model.Payment)
            </div>

        </div>
        <div class="row">
            <textarea id="cartData" style="display:none">@Html.DisplayFor(model => model.Cart)</textarea>

            <div class="editor-field cartSummery col-md-5 col-sm-5 col-xs-12">
            </div>
        </div>
    </div>
</fieldset>
<script type="text/javascript">
    store.clear("cart");
</script>

<p>
    @Html.ActionLink("Continue shopping.", "/MVc_Assignment2/")
</p>
